<h3>
  <i class="fa fa-angle-right"></i>
  Convocatoria
</h3>
<div class="row mt">
  <div class="col-lg-12">
    <div class="form-panel">
      <div class="form-horizontal">
        <form class="style-form" role="form">
          <div class="panel panel-default">
            <div class="panel-heading"><h5><i class="fa fa-angle-right"></i>Detalles de Convocatoria</h5>
            </div>
            <div class="panel-body">
              <div class="form-group">
                <div class="col-lg-6"  {{bind-attr class="errors.nombreLicitacion:has-error errors.nombreLicitacion:has-feedback"}}>
                  <label class="form-label"  for="nombre">Nombre Licitación</label>
                  {{focus-input  type="text" value=nombreLicitacion class="form-control" placeholder="Nombre Licitación" autofocus="autofocus"}}
                  <span class="help-block">{{error errors.nombreLicitacion}}</span>
                  {{#if errors.nombreLicitacion}}
                  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                  {{/if}}
                </div>
                <div class="col-lg-6" {{bind-attr class="errors.convocante:has-error errors.convocante:has-feedback"}}>
                  <label class="form-label"  for="apellido">Convocante</label>
                  {{input type="text" value=convocante class="form-control" placeholder="Convocante"}}
                  <span class="help-block">{{error errors.convocante}}</span>
                  {{#if errors.convocante}}
                  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                  {{/if}}
                </div>
              </div>
              <div class="form-group">
                <div class="col-lg-4"  {{bind-attr class="errors.metodoSeleccion:has-error errors.metodoSeleccion:has-feedback"}}>
                  <label class="form-label" for="metodoSeleccion">Metodo de Selección</label>
                  {{view Ember.Select
                      content=metodosSeleccion
                      selection=metodoSeleccion
                      value=metodoSeleccion
                      classNames="form-control"}}
                   <span class="help-block">{{error errors.password}}</span>
                   {{#if errors.metodoSeleccion}}
                  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                  {{/if}}
                </div>
                <div class="col-lg-4" {{bind-attr class="errors.fechaPublicacion:has-error errors.fechaPublicacion:has-feedback"}}>
                  <label class="form-label" for="fechaPublicacion">Fecha de Publicación</label>
                   {{view Bursa.views.DatePickerView value=fechaPublicacion nullable=false placeholder="Fecha Publicación" }}
                   <span class="help-block">{{error errors.fechaPublicacion}}</span>
                  {{#if errors.fechaPublicacion}}
                  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                  {{/if}}
                </div>
                <div class="col-lg-4" {{bind-attr class="errors.estado:has-error errors.estado:has-feedback"}}>
                  <label class="form-label" for="estado">Estado</label>
                  {{view Ember.Select
                      content=estadosConvocatoria
                      selection=estado
                      value=estado
                      classNames="form-control"}}
                   <span class="help-block">{{error errors.estado}}</span>
                  {{#if errors.estado}}
                  <span class="glyphicon glyphicon-remove form-control-feedback"></span>
                  {{/if}}
                </div>
              </div>
            </div>
          </div>
          <div class="panel panel-default">
              <div class="panel-heading"><h5><i class="fa fa-angle-right"></i>Lotes</h5>
              </div>
              <div class="panel-body">
                <div class="form-horizontal form-detalles">
                </div>
              </div>
          </div>
          <div class="form-group">
                <div class="col-lg-12">
                   <button {{action 'volver'}} class="btn btn-default">Volver</button>
                </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
